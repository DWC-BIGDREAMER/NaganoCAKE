<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
    <table class='table table-borderd'>
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |od| %>
          <tr>
            <td><%= od.creatd_at %></td>
            <td>
              <%= od.postcode %><br>
              <%= od.address %><br>
              <%= od.name %>
            </td>
            <td>
              <% od.items.each do |item| %>
                <%= item.name %><br/>
              <% end %>
            </td>
            <td>
              <% od.cart_items.each do |ci| %>
                <% @total = @total + ci %>
              <% end %>
              <%= @total %>
            </td>
            <td><%= od.status %></td>
            <td>
              <button class="btn">
                <%= link_to '表示する', order_path(od), class:"btn btn-primary" %>
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
