<div class="container">
  <!--注文履歴詳細-->
  <div class="row">
    <div class="col-auto">
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  
  <!--注文情報及び請求情報-->
  <div class="row">
    <!--注文情報-->
    <div class="col-9">
      <h3>注文情報</h3>
      <table class="table">
        <body>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <tr><%= @order.address %></tr>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </body>
      </table>
    </div>
    
    <!--請求情報-->
    <div class="col-3">
      <h3>請求情報</h3>
      <tbody>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_payment %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.bill %></td>
        </tr>
      </tbody>
    </div>
  </div>
  
  <!--注文内容-->
  <div class="row">
    <div class="col">
      <h3>注文内容</h3>
      <tabel class="table">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |ci| %>
            <tr>
              <td><%= ci.item.name %></td>
              <td><%= ci.item.taxed_price %></td>
              <td><%= ci.amount %></td>
              <td><%= ci.sum %></td>
            </tr>
          <% end %>
        </tbody>
      </tabel>
    </div>
  </div>
  
</div>