<div class="container">
  <!--注文履歴詳細-->
  <div class="row">
    <div class="offset-1 col-auto">
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  
  <!--注文情報及び請求情報-->
  <div class="row mt-3">
    <!--注文情報-->
    <div class="col-9">
      <p><strong>注文情報</strong></p>
      <table class="table table-borderd">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.which_pay %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.my_status %></td>
          </tr>
        </thead>
      </table>
    </div>
    
    <!--請求情報-->
    <div class="col-3">
      <p><strong>請求情報</strong></p>
      <table class="table table-borderd">
        <thead class="thead-light">
          <tr>
            <th>商品合計</th>
            <td><%= @ols.sum(&:sum).to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </thead>
      </table>
      
    </div>
  </div>
  
  <!--注文内容-->
  <div class="row">
    <div class="col">
      <p><strong>注文内容</strong></p>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @ols.each do |ol| %>
            <tr>
              <td><%= ol.item.name %></td>
              <td><%= ol.item.taxed_price.to_s(:delimited) %></td>
              <td><%= ol.amount %></td>
              <td><%= ol.sum.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>