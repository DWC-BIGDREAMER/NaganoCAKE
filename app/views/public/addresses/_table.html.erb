<table class="table my-5">
  <thead class="thead-light">
    <tr>
      <th>郵便番号</th>
      <th>住所</th></th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-hover">
    <% addresses.each do |f| %>
      <tr>
        <td><%= f.mark_postcode %></td>
        <td><%= f.address %></td>
        <td><%= f.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(f), class:"btn btn-sm btn-success" %>
          <%= link_to "削除する", address_path(f.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>