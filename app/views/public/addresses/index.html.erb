<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-10">
      <div class="col-3 text-center">
        <h3 class="bg-light">配送先登録 / 一覧</h3>
      </div>
        <%= form_with model: @address, url: addresses_path, local: true do |f| %>
            <!--郵便番号-->
　　　　　　<div class="mb-3">
              <%= f.label "郵便番号(ハイフンなし)", class:"col-3 form-label text-left" %>
              <%= f.text_field :postcode, placeholder: "(例)0000000", class:"col-3 col-form-control" %>
            </div>

            <!--住所-->
            <div class="mb-3">
              <%= f.label "住所", class:"col-3 form-label text-left" %>
              <%= f.text_field :address, placeholder:"(例)東京都渋谷区代々木神園町0-0", class:"col-5 col-form-control" %>
            </div>

            <!--宛名-->
            <div class="mb-3">
              <%= f.label "宛名", class:"col-3 form-label text-left align-top" %>
              <%= f.text_field :name, placeholder:"(例)令和道子", class:"col-3 col-form-control mr-5" %>
              <%= f.submit "新規登録", class: "btn btn-success ml-5" %>
            </div>
        <% end %>

        <%= render "table", addresses: @addresses %>
    </div>
  </div>
</div>