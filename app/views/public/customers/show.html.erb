<div class="container">
  <div class="row">
    <div class="col">

      <h4 class="my-4">マイページ</h1>

        <!--見出し-->
        <div class="d-flex align-items-center">
          <h3 class="text-weight-bold">登録情報</h3>
          <%= link_to "編集する", customers_information_edit_path, :class => "btn btn-success ml-3" %>
        </div>

          <!--マイページ 登録情報テーブル-->
          <table class="table table-bordered">

            <!--氏名-->
            <tr>
              <td class="bg-light">氏名</td>
              <td><%= @cus.full_name %></td>
            </tr>

            <!--カナ-->
            <tr>
              <td class="bg-light">カナ</td>
              <td><%= @cus.full_name_kana %></td>
            </tr>

            <!--郵便番号-->
            <tr>
              <td class="bg-light">郵便番号</td>
              <td>〒<%= @cus.postcode %></td>
            </tr>

            <!--住所-->
            <tr>
              <td class="bg-light">住所</td>
              <td><%= @cus.address %></td>
            </tr>

            <!--電話番号-->
            <tr>
              <td class="bg-light">電話番号</td>
              <td><%= @cus.telephone_number %></td>
            </tr>

            <!--メールアドレス-->
            <tr>
              <td class="bg-light">メールアドレス</td>
              <td><%= @cus.email %></td>
            </tr>

          </table>

          <div class="d-flex align-items-center">
            <h3 class="text-weight-bold">配送先</h3>
            <%= link_to "一覧を見る", addresses_path, :class => "btn btn-primary ml-3" %>
          </div>

          <div class="d-flex align-items-center">
            <h3 class="text-weight-bold">注文履歴</h3>
            <%= link_to "一覧を見る", orders_path, :class => "btn btn-primary ml-3" %>
          </div>

    </div>
  </div>
</div>