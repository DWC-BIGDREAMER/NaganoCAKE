<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">

      <div class="row">
        <div class="offset-1 col-auto">
          <h3 class="bg-light mb-4 px-3">会員情報編集</h3>
        </div>
      </div>
      
      <%= form_with model: @cus, url: admin_customer_path(@cus) do |f| %>
        <div class="row justify-content-center">
        <!--1行目-->
          <div class="col-lg-3 col-md-4 col-sm-4 my-1">
            <p class="my-4">氏名</p>
            <p class="my-4">フリガナ</p>
            <p class="my-4 pt-1">郵便番号</p>
            <p class="my-4 pt-2">住所</p>
            <p class="my-4 pt-2">電話番号</p>
            <p class="my-4 pt-1">メールアドレス</p>
          </div>
          <!--2行目-->
          <div class="col-3 col-sm-4 my-3">
            
            <div class="form-group">
              <%= f.text_field :family_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :family_name_kana, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :postcode, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :address, class: "form-control", style:"width: 250%;" %>
            </div>
            <div class="form-group">
              <%= f.text_field :telephone_number, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
          
            <!--3行目-->
          <div class="col-3 col-sm-4 my-3">
            <div class="form-group">
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :first_name_kana, class: "form-control" %>
            </div>
          </div>
          
        </div>
        
        <div class="row justify-content-center">
          <div class="col-lg-3 col-md-4 col-sm-4 my-1"></div>
          <div class="col-4 co-sm-6">
            <%= f.submit '編集内容を保存', class: "btn btn-success btn-block" %>
          </div>
          <div class="col-4 align-content-right">
            <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger"  %>
          </div>
        </div>
        
      <% end %>
      

      </div>
    </div>
  </div>