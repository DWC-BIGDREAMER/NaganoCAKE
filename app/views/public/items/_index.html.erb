<% items.each_slice(4) do |items_row| %>
  <div class="row">
    <% items_row.each do |f| %>
     <div class="col-md-3">
      <div>
        <p>
          <%= link_to item_path(f) do %>
           <div class="image-box">
            <%= image_tag f.get_image(200,200), class: "image" %>
           </div>
          <% end %>
        </p>
        <p><strong><%= f.name %></strong><br>
        <% if f.is_active? %>
          <span class="text-success font-weight-bold"><%= f.sale_status %></span>
        <% else %>
          <span class="text-secondary font-weight-bold"><%= f.sale_status %></span>
        <% end %>
        </p>
        <p><strong>ï¿¥<%= f.price.to_s(:delimited) %></strong></p>
      </div>
     </div>
    <% end %>
  </div>
<% end %>