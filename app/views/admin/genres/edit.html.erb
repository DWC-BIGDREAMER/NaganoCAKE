<div class="container">
  
  <div class="row">
    <div class="col-5">
      <h3 class="bg-light">ジャンル編集</h3>
    </div>
  </div>
  
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row mt-5">
      <div class="form-group col-lg-2 col-3">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="form-group col-lg-3 col-5">
        <%= f.text_field :name, placeholder: "ジャンル名", autofocus: true, style:"width: 100%" %>
      </div>
      <div class="form-group col-lg-2 col-3">
        <%= f.submit "変更を保存", class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
    
    
  </div>
    
</div>