<div class="container">
  
  <div class="row">
    <div class="col-7">
      <h3 class="bg-light">ジャンル一覧・追加</h3>
    </div>
  </div>
  
  <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
    <div class="row mt-5">
      <div class="col-lg-2 col-3">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="col-lg-3 col-5">
        <%= f.text_field :name, placeholder: "ジャンル名", style:"width: 100%" %>
      </div>
      <div class="col-lg-2 col-3">
        <%= f.submit "新規登録", class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
  
  <div class="row mt-5">
    <div class="col-lg-4 col-7">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>　　ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
    
  
</div>