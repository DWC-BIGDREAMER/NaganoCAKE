<div class="container">
  <div class="row">
    <!--見出し-->
    <div class="col-4">
      <h3>商品新規登録</h3>
    </div>

    <div class="col-lg-12 col-md-10">

      <%= form_with model:[:admin, @item], local: true do |f| %>
            <!--商品画像-->
　　　　　　<div class="mb-3">
              <%= f.label "商品画像", class:"col-4 form-label text-left" %>
              <%= f.file_field :image, accept: "image/*", class:"col-5" %>
            </div>

            <!--商品名-->
            <div class="mb-3">
              <%= f.label "商品名", class:"col-4 form-label text-left" %>
              <%= f.text_field :name, placeholder:"商品名", class:"col-5 col-form-control" %>
            </div>

            <!--商品説明-->
            <div class="mb-3">
              <%= f.label "商品説明", class:"col-4 form-label text-left align-top" %>
              <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", rows:"5", class:"col-5 col-form-control" %>
            </div>

            <!--ジャンル-->
            <div class="mb-3">
              <%= f.label "ジャンル", class:"col-4 form-label text-left" %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --", class:"col-5 col-form-control" %>
            </div>

            <!--税抜価格-->
            <div class="mb-3">
              <%= f.label "税抜価格", class:"col-4 form-label text-left" %>
              <%= f.text_field :price, placeholder:"1000",class:"col-5 col-form-control" %><span class"ml-2">円</span>
            </div>

            <!--販売ステータス-->
            <div class="mb-3">
              <%= f.label "販売ステータス", class:"col-4 col-form-label mr-3" %>
                <%= f.radio_button :is_active, true %>
                <%= f.label "販売中" %> <span class="mx-2"></span>
                <%= f.radio_button :is_active, false %>
                <%= f.label "販売停止中" %>
            </div>
            <div class="text-center">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
  </div>
</div>