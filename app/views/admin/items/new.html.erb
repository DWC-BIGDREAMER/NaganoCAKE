<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex align-items-center">
        <h3 class="text-weight-bold">商品新規登録</h3>
      </div>
          <%= form_with model:[:admin, @item], local: true do |f| %>
            <!--商品画像-->
　　　　　　<div class="form-group row mb-3">
              <%= f.label "商品画像", class:"col-2 col-form-label" %>
              <%= f.file_field :image, accept: "image/*",class:"col-5" %>
            </div>

            <!--商品名-->
            <div class="row mb-3">
              <%= f.label "商品名", class:"col-2 col-form-label" %>
              <%= f.text_field :name, placeholder:"商品名", class:"col-5 form-control" %>
            </div>

            <!--商品説明-->
            <div class="row mb-3">
              <%= f.label "商品説明", class:"col-2 col-form-label" %>
              <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", rows:"5", class:"col-5 form-control" %>
            </div>

            <!--ジャンル-->
            <div class="row mb-3">
              <%= f.label "ジャンル", class:"col-2 col-form-label" %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --",class:"col-5 form-control" %>
            </div>

            <!--税抜価格-->
            <div class="row mb-3">
              <%= f.label "税抜価格", class:"col-2 col-form-label" %>
              <%= f.text_field :price, placeholder:"1000",class:"col-5 form-control" %><span class="ml-2">円</span>
            </div>

            <!--販売ステータス-->
            <div class="row mb-3">
              <%= f.label "販売ステータス", class:"col-2 col-form-label" %>
              <div class="col-5 col-form-label">
                <%= f.radio_button :is_active, true %>
                <%= f.label "販売中" %> /
                <%= f.radio_button :is_active, false %>
                <%= f.label "販売停止中" %>
              </div>
            </div>

            <div>
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          <% end %>
    </div>
  </div>
</div>