<div class="container">
  <!--見出しとボタンが両端になるように-->
  <div class="row justify-content-between">
    <!--見出し-->
    <div class="col-3 text-center">
      <h3 class="bg-light">商品一覧</h3>
    </div>
    <!--ボタン、ワイヤーフレームのプラスは課金プラスっぽい-->
    <div class="col-4 text-right mb-3">
      <%= link_to new_admin_item_path, class: "btn btn-light rounded-circle virder shadow" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>

    <!--テーブル、ごちゃるので分け-->
    <div class="col-lg-12 col-md-10 my-3">
      <%= render "table", items: @items %>
    </div>

    <!--ページャ-->
    <div class="d-flex justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
</div>