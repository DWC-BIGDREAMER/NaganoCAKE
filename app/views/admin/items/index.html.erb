<div class="container">
  <!-- 見出しとボタンが両端になるように -->
  <div class="row justify-content-between align-items-center">
    <!-- 見出し -->
    <div class="col-lg-6 col-md-7">
      <div class="d-flex justify-content-top">
        <h3 class="bg-light text-center w-fit-content p-2">商品一覧</h3>
      </div>
    </div>
    <!-- ボタン -->
    <div class="col-lg-6 col-md-5 text-right mb-3">
      <%= link_to new_admin_item_path, class: "btn btn-light rounded-circle border shadow" do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>

    <!-- テーブル -->
    <div class="col-lg-12 col-md-10 my-3">
      <%= render "table", items: @items %>
    </div>

    <!-- ページャ -->
    <div class="col-12 d-flex justify-content-center text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>