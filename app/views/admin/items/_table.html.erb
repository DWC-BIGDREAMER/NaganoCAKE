<table class="table">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item) do %>
        <%= item.name %>
        <% end %>
      </td>
      <!--X,XXX表記になるように-->
      <td><%= number_to_currency(item.price,strip_insignificant_zeros: true) %></td>
      <td><%= item.genre.name %></td>
      <!--ここ後で見直し-->
      <td><%= item.is_active %></td>
    </tr>
    <% end %>
  </tbody>
</table>