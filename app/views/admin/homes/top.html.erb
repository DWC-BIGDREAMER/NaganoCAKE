<div class="container mt-3">
  <div class="row">
    <div class="col-lg-12 col-md-10">
      <h3>注文履歴一覧</h3>
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody class="table-hover">
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= order.created_at %>
                <% end %>
              </td>
              <td><%= order.name %></td>
              <td><%= order.order_details.amount %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>