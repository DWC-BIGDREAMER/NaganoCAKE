<div class="container">
  
  <div class="row">
    <div class="col-auto">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th class="edit-link">購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="edit-link">
                <%= link_to admin_order_path(order), class:" edit-link" do %>
                  <%= order.y_to_s %>
                <% end %>
              </td>
              <td><%= order.name %></td>
              <td><%= order.order_details.sum(&:amount) %></td>
              <td><%= I18n.t("enums.order.status.#{order.status}") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders %>
</div>