<div class="container mt-3">
  <div class="row justify-content-center">
    
    <div class="col-lg-8 col-md-10">
      <h2 class="mb-5">管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          
          <div class="col-sm-4 mt-1">
            <%= f.label :email, 'メールアドレス', class:'control-label' %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder: "sample@example.com" %><br/>
          </div>
          
          <div class="col-sm-4 mt-2">
            <%= f.label :password, 'パスワード', class:'control-label' %>
          </div>
          <div class="col-sm-8 ">
            <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 form-control' %>
          
          </div>
          <div class="actions offset-4 col-sm-4 mt-5">
              <%= f.submit "ログイン", class:'btn btn-primary btn-block' %>
          </div>
          
          
        </div>
        
      <% end %>
      
      <%= render "admin/shared/links" %>

    </div>
  </div>
</div>