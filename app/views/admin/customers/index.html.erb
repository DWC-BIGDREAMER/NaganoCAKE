<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-10">
      <h3 class="bg-light">会員一覧</h3>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody class="table-hover">
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.family_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <!--Customerモデルで設定したメソッドを使う形に変更しました（渡邊）-->
              <td>
                <% if customer.is_active? %>
                  <span class="text-success font-weight-bold"><%= customer.cus_status %></span>
                <% else %>
                  <span class="text-secondary font-weight-bold"><%= customer.cus_status %></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>