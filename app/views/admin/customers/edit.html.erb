<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      
      <div class="row justify-content-cente">
        <div class="col-lg-1"></div><!--レイアウト調整のための空col-->
        <div class="col-sm-auto">
          <h3 class="bg-light mb-4">　<%= @customer.full_name %>さんの会員情報編集　</h3>
        </div>
      </div>
      
      <div class="row justify-content-center">
      <!--1行目-->
        <div class="col-lg-2 col-md-4 col-sm-4 my-3">
          <p class="mt-1 mb-3">会員ID</p>
          <p class="my-4">氏名</p>
          <p class="my-4">フリガナ</p>
          <p class="my-4 pt-1">郵便番号</p>
          <p class="my-4 pt-2">住所</p>
          <p class="my-4 pt-2">電話番号</p>
          <p class="my-4 pt-1">メールアドレス</p>
          <p class="my-4">会員ステータス</p>
        </div>
        <!--2行目-->
        <div class="col-4 my-3">
          <p><%= @customer.id %></p>
          <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
            <div class="form-group">
              <%= f.text_field :family_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :family_name_kana, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :postcode, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :address, class: "form-control", style:"width: 200%;" %>
            </div>
            <div class="form-group">
              <%= f.text_field :telephone_number, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :email, class: "form-control" %>
            </div>
            
            <div class="row">
              <div class="col-6">
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active_true, "有効" %>
              </div>
              <div class="col-6">
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active_false, "退会" %>
              </div>
            </div>
            
            <%= f.submit '変更を保存', class: "btn btn-success btn-block mt-3" %>
          </div>
          
          <!--3行目-->
          <div class="col-4 mt-5 mb-3">
            
              <div></div>
              <div class="form-group mt-2">
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.text_field :first_name_kana, class: "form-control" %>
              </div>
            
          </div>
          <% end %>
        </div>
        
        
      </div>
    </div>
  </div>
</div>