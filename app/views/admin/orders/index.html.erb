<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-10">
      <div class="d-flex justify-content-top mb-3">
        <h3 class="bg-light text-center w-fit-content p-2"><%= @customer.full_name %>さんの注文履歴</h3>
      </div>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order), class:"edit-link" do %>
                  <%= order.y_to_s %>
                <% end %>
              </td>
              <td><%= order.order_details.sum(&:amount) %></td>
              <td><%= I18n.t("enums.order.status.#{order.status}") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>