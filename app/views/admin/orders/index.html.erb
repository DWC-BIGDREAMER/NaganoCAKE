<div class="container">
  
  <div class="row">
    <div class="col-auto">
      <h4><%= @customer.full_name %>さんの注文履歴</h4>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-11">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order), class:"edit-link" do %>
                  <%= order.y_to_s %>
                <% end %>
              </td>
              <td><%= order.order_details.sum(&:amount) %></td>
              <td><%= order.my_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @orders %>
</div>